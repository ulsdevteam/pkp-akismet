	<message key="plugins.generic.akismet.manager.settings.akismetKeyRequired">The Akismet API key is required.</message>
	<!-- Akismet UI actions -->
	<message key="plugins.generic.akismet.actions.flagAsSpam">Report as spam</message>
	<message key="plugins.generic.akismet.grid.action.flagAsSpam">Report as spam to Akismet</message>
